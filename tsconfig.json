{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "newLine": "LF",
    "preserveConstEnums": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "pretty": true,
    "moduleResolution": "node",
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@main/*": ["src/*"],
      "@libs/*": ["libs/*"],
      "@redux/*": ["redux/*"],
    }
  }
}
